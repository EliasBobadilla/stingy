{
  "$schema": "https://turbo.build/schema.json",
  "ui": "tui",
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "inputs": ["$TURBO_DEFAULT$", ".env*"],
      "outputs": [".next/**", "!.next/cache/**"]
    },
    "lint": {
      "dependsOn": ["^lint"]
    },
    "check-types": {
      "dependsOn": ["^check-types"]
    },
    "dev": {
      "cache": false,
      "persistent": true
    }
  },
  "globalEnv": ["AUTH_SECRET","GOOGLE_CLIENT_ID","GOOGLE_CLIENT_SECRET","SESSION_SECRET","AWS_ACCESS_KEY","AWS_SECRET_ACCESS_KEY","JWT_SECRET"]
}
